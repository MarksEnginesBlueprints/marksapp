    "version": {
      "major": 0,
      "minor": 1
    },
    "origin": "Engines Developer Studio 0.2"
  },
  "metadata": {
    "blueprint": {
      "version": {
        "major": 0,
        "minor": 0,
        "level": "alpha",
        "patch": 0
      }
    },
    "software": {
      "display": {
        "title": "Example Blueprint for Mark",
        "label": "Marks Blueprint"
      }
    },
    "timestamp": "2019-09-20T10:26:34+10:00"
  },
  "software": {
    "base": {
      "name": "markengine",
      "framework": "sinatra",
      "deployment_type": "web",
      "http_protocol": "https_only",
      "memory": {
        "required": 128,
        "recommended": 256
      }
    },
    "scripts": {
      "start": {
        "content": "#!/bin/sh\r\n\r\ngit pull\r\n\r\nbundle --standalone\r\nbundle exec rake db:migrate\r\n\r\nthin  start\r\n\r\nsleep 120"
      }
    },
    "installed_packages": [
      {
        "name": "UrbanFiesta",
        "download_type": "git",
        "source_url": "https://github.com/MarkRatjens/UrbanFiesta.git",
        "destination": "/home/app",
        "extraction_command": "git",
        "path_to_extracted": "UrbanFiesta"
      }
    ],
    "service_configurations": [
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "database/sql/pgsql",
        "variables": {
          "database_name": "_Engines_Builder(engine_name)",
          "database_host": "_Engines_System(pgsql_host)",
          "dbusername": "_Engines_Builder(engine_name)",
          "dbpassword": "_Engines_System(random(10))",
          "collation": "C",
          "encoding": "ascii",
          "full_access": "fals"
        }
      },
      {
        "publisher_namespace": "EnginesSystem",
        "type_path": "filesystem/local/filesystem",
        "variables": {
          "service_name": "_Engines_Builder(engine_name)",
          "volume_src": null,
          "engine_path": null,
          "permissions": "rw",
          "user": "_Engines_Builder(cont_user_id)",
          "group": "_Engines_Builder(data_gid)",
          "fw_user": "_Engines_Builder(cont_user_id)",
          "exclude_from_backup": "false"
        }
      }
    ],
    "environment_variables": [
      {
        "name": "TWILIO_ACCOUNT_ID",
        "mandatory": true,
        "immutable": true,
        "ask_at_build_time": true,
        "input": {
          "type": "string"
        }
      },
      {
        "name": "TWILIO_AUTH_TOKEN",
        "mandatory": true,
        "immutable": true,
        "ask_at_build_time": true,
        "input": {
          "type": "string"
        }
      },
      {
        "name": "TWILIO_NYASA_SERVICE_SID",
        "mandatory": true,
        "immutable": true,
        "ask_at_build_time": true,
        "input": {
          "type": "string"
        }
      },
      {
        "name": "DATABASE_URL",
        "value": "postgres://$dbuser:$dbpasswd@$dbhost/$dbname",
        "input": {
          "type": "string"
        }
      }
    ],
    "file_write_permissions": [
      {
        "path": "/home/app",
        "recursive": true
      }
    ],
    "framework_specific": {
      "rake_tasks": [
        {
          "action": "db:migrate",
          "always_run": true
        }
      ]
    }
  }
}
